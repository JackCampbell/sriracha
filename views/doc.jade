extends ./layout

block content
    #wrapper
      include ./nav
      #page-wrapper
        include ./messages
        .container-fluid
          // Page Heading
          .row
            .col-lg-12
              h1.page-header
                | #{Collection.modelName} #{doc.id}
              ol.breadcrumb
                li
                  i.fa.fa-dashboard
                  a(href=appPath) Admin
                li.active
                  i.fa.fa-
                  |  #{Collection.pluralName}
                li
                  i.fa.fa-
                  |  #{doc.id}

          .row
            .col-xs-8.col-xs-offset-2
              form(action="", method="post")
                each field in Collection.adminFields
                  case doc.getFieldType(field)
                    when 'text'
                      include ./fields/text
                    when 'checkbox'
                      include ./fields/checkbox
                    when 'ref'
                      include ./fields/ref
                button.btn.btn-success.pull-left(type='submit') Save
              form.pull-right(method="post" action="?_method=DELETE")
                button.btn.btn-danger(type='submit') Delete
                        
              
